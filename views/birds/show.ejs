<!-- views/birds/show.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>
        <%= bird.name %>
    </title>
</head>

<body>
    <div class="container">
        <img class="feathers" src="/images/feathers.png"
            alt="A line drawing of two feathers in bright blue and teal. Created by Icongeek26.">
        <h1><%= bird.name %></h1>
    </div>

    <h4>Family: <%= bird.family %></h4>
    <p><%= bird.description %></p>

    <form action="/birds/<%= bird._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete <%= bird.name %></button>
    </form>

    <a href="/birds/<%= bird._id %>/edit">Edit <%= bird.name %></a>
    <br>



    <a class="birds-index-link" href="/birds">
        <div class="index-link-text">Birds Index</div>
    </a>
    <a class="birds-index-link" href="/">
        <div class="index-link-text">Return Home</div>
    </a>
</body>

<footer>
    Icons by <a href="https://www.flaticon.com/free-icons/heron">Icongeek26</a>
</footer>

</html>