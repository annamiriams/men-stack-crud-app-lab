<!-- views/birds/edit.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title><%= bird.name %></title>
</head>
<body>
    <h1>Edit a bird in the database</h1>
    <form action="/birds/<%=bird._id%>?_method=PUT" method="POST">
        <fieldset>
            <legend>Enter info:</legend>
            <div>
                <label for="name">Name:</label>
                <input type="text" name="name" id="name" value="<%= bird.name %>">
            </div>

            <div>
                <label for="family">Family:</label>
                <select id="family" name="family">
                    <!-- ternary operators for each dropdown option so that when the user edits a bird, they will see the corresponding dropdown that had previously been entered for said bird -->
                    <option value="dropdown" <%=bird.family == '' ? 'selected' : '' %>></option>
                    <option value="waterfowl" <%=bird.family == 'waterfowl' ? 'selected' : '' %>>Waterfowl</option>
                    <option value="shorebirds" <%=bird.family == 'shorebirds' ? 'selected' : '' %>>Shorebirds</option>
                    <option value="herons" <%=bird.family == 'herons' ? 'selected' : '' %>>Herons</option>
                    <option value="birds-of-prey" <%=bird.family == 'birdsOfPrey' ? 'selected' : '' %>>Birds of Prey</option>
                    <option value="woodpeckers" <%=bird.family == 'woodpeckers' ? 'selected' : '' %>>Woodpeckers</option>
                    <option value="songbirds" <%=bird.family == 'songbirds' ? 'selected' : '' %>>Songbirds</option>
                    <option value="other" <%=bird.family == 'other' ? 'selected' : '' %>>Other</option>
                </select>
            </div>

            <div>
                <label for="description">Description:</label>
                <textarea name="description" id="description" maxLength='100'><%= bird.description %></textarea>
            </div>

            <div>
                <label for="image">Upload an image:</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>


            <button type="submit" id="button" style="vertical-align:middle">Submit</button>
        </fieldset>
    </form>

    <a href="/birds">Return to index</a>


</body>
</html>